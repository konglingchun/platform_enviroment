git config --global alias.st status
git config --global core.editor vim
git config --global oh-my-zsh.hide-status 1
git config --global oh-my-zsh.hide-dirty 1


git config --global merge.tool meld
git config --global mergetool.meld.cmd 'meld "$BASE" "$LOCAL" "$REMOTE" "$MERGED"'
git config --global diff.tool meld
git config --global difftool.meld.cmd 'meld "$LOCAL" "$REMOTE"'
git config --global alias.dm 'difftool --dir-diff --tool=meld'

配置好后.gitconfig内容如下

[core]
	quotepath = false
	editor = vim
[alias]
    co = checkout
    ci = commit
    st = status
    pl = pull
    ps = push
    dt = difftool
    l = log --stat
    cp = cherry-pick
    ca = commit -a
    b = branch
    br = branch
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    current = log  --name-status -1
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    dm = difftool --dir-diff --tool=meld
[merge]
	tool = meld
[mergetool "meld"]
	cmd = meld \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[diff]
	tool = meld
[difftool "meld"]
	cmd = meld \"$LOCAL\" \"$REMOTE\"
[oh-my-zsh]
    hide-status = 1
    hide-dirty = 1


[user]
	name = konglingchun
	email = kong_ling_chun@sina.com
[color]
	ui = auto
